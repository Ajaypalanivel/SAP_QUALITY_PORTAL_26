<mvc:View
    controllerName="quality.controller.Record"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page 
        title="Quality Records"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class="record-page">

        <content>
            <VBox>
                <!-- 🔍 Search + Filter Toolbar -->
                <Toolbar>
                    <SearchField
                        width="40%"
                        liveChange=".onSearch"
                        placeholder="Search by Lot, Operation, Characteristic, or Material" />
                    
                    <ToolbarSpacer/>

                    <Label text="Result Code:"/>
                    <Select id="resultFilter" change=".onFilterResult">
                        <core:Item key="ALL" text="All" />
                        <core:Item key="A" text="Accepted" />
                        <core:Item key="R" text="Rejected" />
                    </Select>
                </Toolbar>

                <!-- 📋 Records Table -->
                <ScrollContainer width="100%" height="500px" horizontal="true" vertical="true">
                    <Table id="recordTable" inset="false" items="{/RecordData}">
                        <columns>
                            <Column><Text text="Inspection Lot" /></Column>
                            <Column><Text text="Operation No" /></Column>
                            <Column><Text text="Characteristic No" /></Column>
                            <Column><Text text="Result Code" /></Column>
                            <Column><Text text="Inspection Type" /></Column>
                            <Column><Text text="Plant" /></Column>
                            <Column><Text text="Material" /></Column>
                            <Column><Text text="Object No" /></Column>
                            <Column><Text text="Object Type" /></Column>
                            <Column><Text text="Status" /></Column>
                        </columns>

                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{InspectionLot}" />
                                    <Text text="{OperationNo}" />
                                    <Text text="{CharacteristicNo}" />
                                    <Text text="{ResultCode}" />
                                    <Text text="{InspectionType}" />
                                    <Text text="{Plant}" />
                                    <Text text="{MaterialNumber}" />
                                    <Text text="{ObjectNumber}" />
                                    <Text text="{ObjectType}" />
                                    <Text text="{Status}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </ScrollContainer>

                <!-- 📄 Pagination -->
                <Toolbar class="pagination-toolbar" design="Transparent">
                    <Button text="&lt;&lt;" press=".onFirstPage" class="pagination-btn"/>
                    <Button text="&lt;" press=".onPrevPage" class="pagination-btn"/>
                    <Text text="Page {/currentPage} of {/totalPages}" class="page-info"/>
                    <Button text="&gt;" press=".onNextPage" class="pagination-btn"/>
                    <Button text="&gt;&gt;" press=".onLastPage" class="pagination-btn"/>
                </Toolbar>
            </VBox>
        </content>
    </Page>
</mvc:View>
